@{
    ViewBag.Title = "Inicio";
    var notificacionesEmpleado = Session["Notificaciones"] as List<CapaEntidad.notificaciones>;
}

<main class="container mt-5">
    <!-- Logo centrado -->
    <div class="row justify-content-center mb-4">
        <img src="~/img/" name="logo" class="img-fluid" alt="Logo Sagicor" />
    </div>

    <!-- Tarjetas de gestión -->
    <div class="row justify-content-center text-center">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">Gestionar vacaciones</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("SolicitarVacaciones","Vacaciones")">Más detalles</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-warning text-white">
                <div class="card-body">Gestionar permisos</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("Permisos","SolicitudPermisos")">Más detalles</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">Gestionar incapacidades</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("SolicitudIncapacidad","SolicitarIncapacidad")">Más detalles</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>



    <!-- Tarjeta de usuario y notificaciones -->
    <div class="row justify-content-center">
        <div class="col-lg-4 mb-4">
            <div class="card text-center">
                <img src="~/img/user.png" class="card-img-top img-fluid mx-auto d-block" alt="Foto de usuario">
                <div class="card-body">
                    <h5 class="card-title">Usuario</h5>
                    <p class="card-text"><i>Nombre: @Session["NombreCompleto"]</i></p>
                    <p class="card-text"><i>Departamento: @Session["Departamento"]</i></p>
                    <p class="card-text"><i>Puesto: @Session["Puesto"]</i></p>
                </div>
            </div>
        </div>

       
    </div>
</main>
